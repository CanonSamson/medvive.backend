# OpenTelemetry Configuration (existing)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4333/v1/traces
OTEL_EXPORTER_OTLP_HEADERS=Authorization=Bearer your-token
OTEL_SERVICE_NAME=notification-svc

# Server Configuration
PORT=4004
TZ=Africa/Kampala

# Notification Worker Service
NOTIFICATION_WORKER_SERVICE_URL=http://localhost:4014


# Environment variables for medvive.backend

# Server
NODE_ENV=development
PORT=5000

# Email configuration
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
# IMPORTANT: Use a Google App Password (not your normal password)
# Create via Google Account -> Security -> App passwords
EMAIL_PASSWORD=your_google_app_password

# SMTP override (use for non-Gmail or to be explicit with Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true

# Resend (HTTP email fallback)
# Create an API key at https://resend.com and verify your sender domain.
RESEND_API_KEY=your_resend_api_key
# Use a verified sender address on your domain.
RESEND_FROM=no-reply@yourdomain.com
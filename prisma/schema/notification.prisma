model Notification {
    id         String   @id @default(uuid())
    type       String? // e.g., 'message', 'system', 'kyc', etc.
    meta       Json // Store dynamic info like { "channel": "#general", "group": "Bingham Insurance", "unreadCount": 7 }
    heading    String // e.g., "Congratulations ðŸŽ‰. Your KYC is complete!"
    subHeading String? // Optional secondary heading (like "Bingham Insurance")
    subText    String? // Optional secondary text (like "View", or a short summary)
    isRead     Boolean  @default(false)
    groupId    String? // If related to a group
    userId     String // The recipient
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt
    isBf       Boolean?  @default(false)
}
